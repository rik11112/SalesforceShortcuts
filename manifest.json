{
    "manifest_version": 3,
    "name": "Grobet Shortcuts",
    "version": "1.0",
    "description": "Shortcuts voor Grobet.",
    "permissions": [
        "activeTab"
    ],
    "action": {
        "default_icon": {
            "16": "img/itteslogo.png",
            "48": "img/itteslogo.png",
            "128": "img/itteslogo.png"
        },
        "default_popup": "popup.html"
    },
    "icons": {
        "192": "img/itteslogo.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://*.force.com/*"
            ],
            "js": [
                "content.js"
            ]
        },
        {
            "matches": [
                "*://grobet--dev.sandbox.lightning.force.com/*",
                "*://grobet--uat.sandbox.lightning.force.com/*",
                "*://grobet.lightning.force.com/*"
            ],
            "js": [
                "custom/grobet-product2.js"
            ]
        }
    ]
}